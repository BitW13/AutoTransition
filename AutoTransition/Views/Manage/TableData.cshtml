@model IEnumerable<AutoTransition.Context.Models.User>

@if (Model.Count() == 0)
{
    <tr>
        <td colspan="4" style="color: red;" class="to-centre">
            Пользователь не найден
        </td>
    </tr>
}


@foreach (var item in @Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td class="to-centre">
            <a href="~/Manage/UserInfo/@item.Id">Подробнее</a>
        </td>
    </tr>
}