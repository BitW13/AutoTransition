@model AutoTransition.Models.Entities.AccountIndexViewModel

@{
    ViewBag.Title = "Мой аккаунт";
}

<div class="container body-content">
    <div>
        <h2>Сведения о пользователе.</h2>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Email)
            </dd>

            <hr />

            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>

            <hr />

            <dt>
                @Html.DisplayNameFor(model => model.LastName)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.LastName)
            </dd>

            <hr />

            <dt>
                @Html.DisplayNameFor(model => model.Phone)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Phone)
            </dd>

            <hr />

            <dt>
                @Html.DisplayNameFor(model => model.CountOfActiveOrders)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.CountOfActiveOrders)
            </dd>

            <hr />

        </dl>
    </div>

    <p>
        @Html.ActionLink("Просмотреть историю заказов", "ListOfUserOrders", "Order", new { @class = "btn btn-primary" })
    </p>
    <hr />
    <p>
        @Html.ActionLink("На главную", "Index", "Home") |
        @Html.ActionLink("Изменить личные данные", "EditUserData", "Manage") |
        @Html.ActionLink("Изменить пароль", "EditUserPassword", "Manage") |
        @Html.ActionLink("Удалить аккаунт", "Delete", "Manage")
    </p>

    <p>
        @if (Request.Cookies["Moder"] == null)
        {
            @Html.ActionLink("Получить права модератора", "GetModer", "Account")
        }
    </p>

    <p>
        @if (Request.Cookies["Admin"] == null)
        {
            @Html.ActionLink("Получить права администратора", "GetAdmin", "Account")
        }
    </p>
</div>
