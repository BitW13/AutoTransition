@model AutoTransition.Context.Models.TransportationTypes

@{
    ViewBag.Title = "Добавить вид транспортировки";
}

<h2>Добавить вид транспортировки</h2>

<div class="container body-content">
    @using (Html.BeginForm("AddTransportationType", "Orders"))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <p class="control-label col-md-2">
                    @Html.DisplayNameFor(model => model.TransportationType)
                </p>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TransportationType, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TransportationType, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Добавить" class="btn btn-pro" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("На главную", "Index", "Home")
    </div>
</div>