@model IEnumerable<AutoTransition.Models.Entities.IndexRouteViewModel>

@if (Model.Count() == 0)
{
    <tr>
        <td colspan="4" style="color: red;" class="to-centre">
            Маршрутов не найдено.
        </td>
    </tr>
}


@foreach (var item in @Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.StartCity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndCity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Distance)
        </td>
    </tr>
}

