@model IEnumerable<AutoTransition.Models.Entities.AdminIndexOrderViewModel>

@if (Model.Count() == 0)
{
    <tr>
        <td colspan="4" style="color: red;" class="to-centre">
            Заказов не найдено.
        </td>
    </tr>
}


@foreach (var item in Model)
{
    <tr>
        <td>
            <a href="~/Manage/UserInfo/@item.UserId">@item.Email</a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LoadDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UnloadDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td class="to-centre">
            <a href="~/Orders/OrderInfo/@item.Id">Подробнее</a>
        </td>
    </tr>
}

